        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="scrollmodalLabel" style="color:red">Bạn có chắc muốn xóa người dùng này?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"> @Html.ActionLink("×", "Index", "User")</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="dl-horizontal">
                    @*<dt> @Html.DisplayNameFor(model => model.userpass)</dt>
                        <dd>@Html.DisplayFor(model => model.userpass)</dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.username)
